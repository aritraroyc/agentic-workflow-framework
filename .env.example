# Agentic Workflow Framework - Environment Configuration Example
# Copy this file to .env and fill in your values

# ==============================================================================
# LLM Configuration
# ==============================================================================

# Anthropic Claude (Primary)
ANTHROPIC_API_KEY=sk-ant-v3-your-api-key-here

# Model selection (Claude 3.5 Sonnet recommended)
LLM_MODEL=claude-3-5-sonnet-20241022

# OpenAI (Optional fallback)
# OPENAI_API_KEY=sk-proj-your-openai-key
# OPENAI_MODEL=gpt-4-turbo-preview

# ==============================================================================
# Database Configuration
# ==============================================================================

# PostgreSQL
POSTGRES_DB=agentic_workflows
POSTGRES_USER=agentic_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==============================================================================
# Service Configuration
# ==============================================================================

# API Enhancement Service
API_ENHANCEMENT_SERVICE_HOST=localhost
API_ENHANCEMENT_SERVICE_PORT=8001

# Coordinator settings
COORDINATOR_TIMEOUT=300
COORDINATOR_RETRY_ATTEMPTS=3
COORDINATOR_RETRY_DELAY=5

# Invoker settings
INVOKER_TIMEOUT=60
INVOKER_RETRY_ATTEMPTS=3
INVOKER_CACHE_SIZE=100

# ==============================================================================
# Execution Configuration
# ==============================================================================

# Execution strategy: adaptive, sequential, parallel
EXECUTION_STRATEGY=adaptive

# Output configuration
OUTPUT_DIR=./outputs
OUTPUT_FORMAT=json

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=text

# ==============================================================================
# Development Configuration
# ==============================================================================

# Testing
TEST_ENV=local
SKIP_LLM_CALLS=false

# Debug mode
DEBUG=false
VERBOSE=false

# ==============================================================================
# Redis Configuration (for caching and jobs)
# ==============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================================================
# Monitoring Configuration
# ==============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# ==============================================================================
# Security Configuration (for production)
# ==============================================================================

# API Keys and authentication
# API_AUTH_ENABLED=false
# API_AUTH_TYPE=bearer  # bearer, api_key, oauth2

# CORS configuration
# CORS_ENABLED=true
# CORS_ORIGINS=http://localhost:3000

# Rate limiting
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# ==============================================================================
# Deployment Configuration
# ==============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Service URLs (for A2A deployments)
# API_ENHANCEMENT_SERVICE_URL=http://localhost:8001
# UI_ENHANCEMENT_SERVICE_URL=http://localhost:8002

# ==============================================================================
# Notification Configuration (optional)
# ==============================================================================

# Email notifications
# SMTP_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Slack notifications
# SLACK_ENABLED=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==============================================================================
# Notes
# ==============================================================================

# For development:
# - Use ANTHROPIC_API_KEY from https://console.anthropic.com
# - Set LOG_LEVEL=DEBUG for detailed logging
# - SKIP_LLM_CALLS=true to test without API calls

# For production:
# - Use strong passwords for POSTGRES_PASSWORD
# - Set LOG_LEVEL=WARNING to reduce log volume
# - Enable CORS_ENABLED and API_AUTH_ENABLED
# - Use SSL/TLS for all service connections
# - Set ENVIRONMENT=production
